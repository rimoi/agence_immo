{% extends 'admin.html.twig' %}

{% block title %}Modification {{ user.nickname }}{% endblock %}

{% block body %}

    <div class="py-2 text-center">
        <div class="d-flex">
            <div>
                <a href="{{ path('admin_user_index') }}" class="btn btn-dark">Retour</a>
            </div>
            <div class="pl-2">
                {{ include('admin/user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                {{ form_start(form) }}
                <div class="card">
                    <div class="card-header">Modification {{ user.nickname }}</div>
                    <div class="card-body">
                        {{ include('admin/user/_form.html.twig', {'button_label': 'Update'}) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
