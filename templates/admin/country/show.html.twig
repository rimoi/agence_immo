{% extends 'admin.html.twig' %}

{% block title %}Voir {{ country.name }}{% endblock %}


{% block body %}

    <div class="py-2 text-center">
        <div class="d-flex">
            <div>
                <a href="{{ path('admin_country_index') }}" class="btn btn-dark">Retour</a>
            </div>
            <div class="px-2">
                <a href="{{ path('admin_country_edit', {'id': country.id}) }}" class="btn btn-info">Modifier</a>
            </div>
            <div>
                {{ include('admin/country/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">Voir le Pays '{{ country.name }}'</div>
                    <div class="card-body">
                        <div>

                            <table class="table table-responsive table-striped">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ country.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ country.name }}</td>
                                </tr>

                                <tr>
                                    <th>Date de création</th>
                                    <td>{{ country.createdAt ? country.createdAt|date('d/m/Y à H:i:s') : '' }}</td>
                                </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
