<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-12 col-sm-8 offset-md-1">
            <div class="row my-3">
                <div class="col-12">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <hr>
            <div class="row my-3">
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>
            </div>

            <div class="row my-3">
                <div class="col-12 col-lg-3 offset-lg-4">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
