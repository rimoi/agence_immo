{% block javascripts %}
    {{ parent() }}

    <script>
        var $sport = $('#service_city');
        $sport.change(function() {

            $('.js-loader').addClass('spinner-border')

            var $form = $(this).closest('form');

            var data = {};
            data[$sport.attr('name')] = $sport.val();

            $.ajax({
                url : $form.attr('action'),
                type: $form.attr('method'),
                data : data,
                success: function(html) {
                    $('#service_district').replaceWith(
                        $(html).find('#service_district')
                    );

                    $('#service_district').css('width', '93%');

                    $('#service_district').select2();

                    setTimeout(function () {
                        $('.js-loader').removeClass('spinner-border')
                    }, 500);
                }
            });
        });

        window.addEventListener('load', (event) => {
            let form_has_error = '{{ show_updaded_image }}';

            if (form_has_error != 0) {
                document
                    .querySelectorAll('.js-show-element')
                    .forEach((tag) => {
                        triggerEvent(tag, 'click')
                    });
            }

            function triggerEvent(el, eventName, options) {
                var event;
                if (window.CustomEvent) {
                    event = new CustomEvent(eventName, options);
                } else {
                    event = document.createEvent('CustomEvent');
                    event.initCustomEvent(eventName, true, true, options);
                }
                el.dispatchEvent(event);
            }

        });
    </script>
