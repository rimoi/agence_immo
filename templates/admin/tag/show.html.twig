{% extends 'admin.html.twig' %}

{% block title %}Voir {{ tag.name }}{% endblock %}

{% block body %}
    <div class="py-2 text-center">
        <div class="d-flex">
            <div>
                <a href="{{ path('admin_tag_index') }}" class="btn btn-dark">Retour</a>
            </div>
          <div class="px-2">
              <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}" class="btn btn-info">Modifier</a>
          </div>
            <div>
                {{ include('admin/tag/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">Modifier {{ tag.name }}</div>
                    <div class="card-body">
                        <div>

                            <table class="table table-responsive">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ tag.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ tag.name }}</td>
                                </tr>
                                <tr>
                                    <th>Content</th>
                                    <td>{{ tag.content }}</td>
                                </tr>
                                <tr>
                                    <th>CreatedAt</th>
                                    <td>{{ tag.createdAt ? tag.createdAt|ago : '' }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
